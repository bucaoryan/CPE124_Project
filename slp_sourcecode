import RPi.GPIO as GPIO
import time
from time import sleep

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)
GPIO.setup(20, GPIO.IN) #alcohol
GPIO.setup(23, GPIO.IN, GPIO.PUD_DOWN) #float switch

Relay_1_GPIO = 2 #alcohol

GPIO.setup(Relay_1_GPIO, GPIO.OUT)

count=0
date_log = []

while True:
    if GPIO.input(23):
        print("FULL")
        time.sleep(60)
    else:
        print("EMPTY")
        time.sleep(5)

    j = GPIO.input(20)
    if j==0:
        print("no hand")
        GPIO.output(Relay_1_GPIO, GPIO.LOW)
    elif j==1:
        print("SYSTEM ACTIVATED")
        date_log.append(time.ctime())
        GPIO.output(Relay_1_GPIO, GPIO.LOW)
        time.sleep(1)
        GPIO.output(Relay_1_GPIO, GPIO.HIGH)
        count +=1
        
